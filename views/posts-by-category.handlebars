<article class="post">
    <h1>Friends Who Post About {{post.category_name}}</h1>
  <div class="title">
    <p> {{post.title}}</p>
    <p>
        {{post.post_body}}
    </p>
    
  </div>
  <div class="meta">
    posted by {{post.user.username}} on
    {{post.created_at}}
    |
    <a href="/post/{{post.id}}">{{post.comments.length}} comment(s)</a>
  </div>
</article>