<article class="post article-container">
    <div class="title">
        <p> {{title}}</p>
        <p>
            {{post_body}}
        </p> 
        <img src="{{image_path}}">

    </div>
    <div class="meta">
        posted by {{user.username}} on
        {{created_at}}
        |
        {{!-- <a href="/post/{{id}}">{{comments.length}} comment(s)</a> --}}
    </div>
</article>



<div class="article-container">
    {{#each comments as |comment|}}
        <div>
            <div>
            {{user.username}}
            <div> {{created_at}} </div>
            </div>
        </div>
        <div>
            {{coments.comment_text}}
        </div>
    {{/each}}
</div>