<div class="card-container">
    {{#each comments as |comment|}}
        <div class="comment ">

            <div class="comment-border">{{user.username}} commented at <span>
                    {{comment.created_at}}</span></div>
            <p class="commentline">
                {{comment.comment_text}}
            </p>
        </div>
    {{/each}}
</div>