<article class="post">
    <div class="card">
        <div class="card-body">
            <h5 class="card-title">{{title}}</h5>

            <p class="card-text">
                {{post_body}}
            </p>
        </div>
        <div class="card-footer">
            <small class="text-muted">
                {{created_at}}
                |
                <a " href="/post/{{id}}">{{comments.length}} comment(s)</a></small>
        </div>
    </div>

</article>