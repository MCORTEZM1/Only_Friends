<div id="newPostModal" class="modalHide">
    <div class="new-post-form">
        <form  action="/api/posts" method="post" enctype="multipart/form-data" >
            <div class="mb-3">
                <label for="title">Post Title:</label>
                <input class="input-css" id="title" name="title"  type="text" placeholder="Title">
                </div>
            <div class="mb-3">
                <label for="post_body">Post Body:</label>
                <textarea  class="input-css" name="post_body" id="post_body" cols="50" rows="10" placeholder="Text"></textarea>
            </div>
                
            <div class="mb-3">
                <label for="category_name">Category:</label>
                <select class="input-css" name="category_name" id="category_name">
                    <option value="Business">Business</option>
                    <option value="Cars">Cars</option>
                    <option value="Coding">Coding</option>
                    <option value="Crypto">Crypto</option>
                    <option value="DIY">DIY</option>
                    <option value="Fashion">Fashion</option>
                    <option value="Finance">Finance</option>
                    <option value="Fitness">Fitness</option>
                    <option value="Food">Food</option>
                    <option value="Gaming">Gaming</option>
                    <option value="Lifestyle">Lifestyle</option>
                    <option value="Movie">Movie</option>
                    <option value="Music">Music</option>
                    <option value="News">News</option>
                    <option value="Parenting">Parenting</option>
                    <option value="Pets">Pets</option>
                    <option value="Politics">Politics</option>
                    <option value="Sports">Sports</option>
                    <option value="Tech">Tech</option>
                    <option value="Travel">Travel</option>
                </select>
            </div>
                <label for="image">Image:</label> 
                <input class="input-css" id="image-id" type="file" name="image" />
                <div>
                    <button  class="userBtn" id="image-btn" type='submit' >Submit Post</button>
                </div>
        </form>
        <button class="userBtn" id="close-btn" type="click">Cancel</button>    
    </div>
</div>